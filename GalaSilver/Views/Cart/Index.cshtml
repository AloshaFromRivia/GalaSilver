@model CartViewIndexModel

@{
    ViewBag.Title = "Корзина";
    Layout = "_Layout";
}

<section class="h-100">
  <div class="container py-5">
    <div class="row d-flex justify-content-center my-4">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Всего товаров в корзине - @Model.Cart.Items.Count()</h5>
          </div>
          <div class="card-body">
            @foreach (var item in Model.Cart.Items)
            {
              @await Html.PartialAsync("CartLineSummary",item)
              <hr class="my-4" />
            }
          </div>
        </div>
      </div>
       <div class="col-md-4">
                <div class="card mb-4">
                  <div class="card-header py-3">
                    <h5 class="mb-0">Итоговая стоимость</h5>
                  </div>
                  <div class="card-body">
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                        Товары
                        <span>@Model.Cart.SubTotal().ToString("C0")</span>
                      </li>
                      <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                        Доставка
                        <span>Бесплатная</span>
                      </li>
                      <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                        <div>
                          <strong>Итог</strong>
                          <strong>
                            <p class="mb-0">(Включая НДС)</p>
                          </strong>
                        </div>
                        <span><strong>@Model.Cart.SubTotal().ToString("C0")</strong></span>
                      </li>
                    </ul>
              
                    <a class="btn btn-danger btn-lg btn-block text-white" asp-controller="Order" asp-action="Checkout">
                      Оформить покупку
                    </a>
                  </div>
                </div>
              </div>
    </div>
  </div>
</section>
