@model LoginModel

@{
    ViewBag.Title = "Вход";
    Layout = "_Layout";
}

<div class="container">
    <div class="col-md-6 col-sm-12 mx-auto mt-4">
        
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All"></div>
            <h1 class="h3 mb-3 fw-normal text-center"><span class="text-danger">Gala</span>Silver</h1>
            <h2 class="text-center">Вход</h2>
            <div class="form-floating my-1">
                <input asp-for="Email" class="form-control" placeholder="name@example.com">
                <label asp-for="Email"></label>
            </div>
            <div class="form-floating my-1">
                <input class="form-control" asp-for="Password" placeholder="Password">
                <label asp-for="Password"></label>
            </div>
            <button class="w-100 btn btn-lg btn-danger my-1 text-white" type="submit">Войти</button>
            <a asp-controller="Account" asp-action="Registration" class="nav-link">Регистрация</a>
        </form>
    </div>
</div>

